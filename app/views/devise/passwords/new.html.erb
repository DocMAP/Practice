<style type="text/css">
  body {
    height: 100vh;
  }
  h1 {
        font-size: 36px;
        font-style: italic;

        display: flex;
        justify-content: center;
        text-shadow: 2px 2px 4px #000000;
        text-decoration: underline;
        margin-top: 200px;
        margin-right: 30px;
  }
  .col {
        margin-top: 30px;
        margin-right: 100px;
  }
</style>

<p></p>
<h1 class="title text-center">Forgot your password?</h1>
<div class="col d-flex justify-content-center">
  <div class="row">
    <div class="col-md-12 text-left">

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, data: { turbo: false }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>
    <p></p>

  <div class="actions justify-content-center text-center">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-outline-primary' %>
    <% end %>
  </div>
    <p></p>


<div class="auth-links">
        <%= render "devise/shared/links" %>
      </div>
      
    </div>
  </div>
</div>
