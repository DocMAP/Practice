<p style="color: green"><%= notice %></p>

<div class="images-wrapper" data-controler="sortable">
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3 sortable">
        <% @portfolio_items.each do |portfolio_item| %>
          <div class="col">
              <div class="card shadow-sm" data-id="<%= portfolio_item.id %>">
                  <%= image_tag portfolio_item.thumb_image, width: "360", height: "280" %>
                <div class="card-body">
                  <p class="card-text">
                      <h5><%= portfolio_item.title.upcase %></h5>
                      <h6><%= portfolio_item.subtitle %></h6>
                      </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", portfolio_item %></button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Comment</button>
                    </div>
                    <small class="text-muted">something</small>
                  </div>
                </div>
              </div>
          </div>
        <% end %>
      </div>
    </div>
    <br>
      <%= link_to "Create New Item", new_portfolio_path if logged_in?(:admin) %>
  </div>
</div>

