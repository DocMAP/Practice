<p style="color: green"><%= notice %></p>

<div class="album py-5 bg-light">
  <div class="container">

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% @portfolio_items.each do |portfolio_item| %>

        <div class="col">
            <div class="card shadow-sm">
                <%= image_tag portfolio_item.thumb_image %>
              <div class="card-body">
                <p class="card-text">
                    <h5><%= portfolio_item.title.upcase %></h5>
                    <h6><%= portfolio_item.subtitle %></h6>
                    <%= portfolio_item.body %>
                    </p>
                <div class="d-flex justify-content-between align-items-center">
                  <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary"><%= link_to "View", portfolio_item %></button>
                    <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                  </div>
                  <small class="text-muted">9 mins</small>
                </div>
              </div>
            </div>
        </div>
      <% end %>


    </div>
  </div>
</div>


<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_path if logged_in?(:admin) %>

<% @portfolio_items.each do |portfolio_item| %>
  <p><%= portfolio_item.title.upcase %></p>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.main_image %>
  <%= image_tag portfolio_item.thumb_image %>
  <h2>Technologies Used:</h2>
  <%= portfolio_item.technologies.name %>

   
  <p>
      <%= link_to "Show this Portfolio", portfolio_item %>
    </p>
    
    <hr>

    <%= params.inspect %>
    <% end %>