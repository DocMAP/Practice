<div id="<%= dom_id @portfolio_item %>">
  <%= image_tag @portfolio_item.main_image %>
  <p>
    <strong>Title:</strong>
    <%= @portfolio_item.title.upcase %>
  </p>

  <p>
    <strong>Subtitle:</strong>
    <%= @portfolio_item.subtitle %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= @portfolio_item.body %>
  </p>
  <%= image_tag @portfolio_item.thumb_image %>

</div>
