<style type="text/css">
  body {
    background-color: whitesmoke;
  }
  h2 {
        color: aliceblue;
        text-shadow: 2px 2px 4px #000000;
        text-decoration: underline;
      }
</style>

<div class="col d-flex justify-content-center">
  <div class="card" style="width: 60rem;">
    <h2 class="portfolio_titles text-center"><%= @portfolio_item.title.upcase %></h2>
    <div class="card-body">
      <div class="row">
        <div class="col-md-8 text-left">
          <%= image_tag @portfolio_item.main_image %><br>
          <%= @portfolio_item.body %>
        </div>
        <div class="col-md-4">
          <div class="card shadow-sm">
              <%= image_tag @portfolio_item.thumb_image %>
            <div class="card-body">
              <p class="card-text">
                  <h6><%= @portfolio_item.subtitle %></h6>
                  </p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">first</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
                <small class="text-muted">9 mins</small>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<br>

<div class="cover-container d-flex w-100 justify-content-center">
        <div class="row d-flex w-100 display-flex">
          <div class="col-md-4 text-center justify-content-center display-flex">
            <br>
            <p>
            <%= link_to "Edit this Portfolio", edit_portfolio_path(@portfolio_item) if logged_in?(:admin) %>
            </p>
          </div>

          <div class="col-md-4 text-center justify-content-center display-flex">
            <br>

            <p>
              <%= link_to "Back to Portfolio Items", portfolios_path %>
            </p>

          </div>

          <div class="col-md-4 text-center justify-content-center display-flex">
            <p><%= button_to "Delete this Portfolio Item", @portfolio_items, class: 'btn btn-outline-danger', method: :delete if logged_in?(:admin) %></p>
          </div>
        </div> 
      </div>
<hr>
<h1>Alternative Layout</h1>
<div class="container">
  <div class="row">
    <div class="col-md-7">
      <%= image_tag @portfolio_item.main_image %>
    </div>
    <div class="col-md-5">
      <h2><%= @portfolio_item.title.upcase %></h2>
      <h3><%= @portfolio_item.subtitle %></h3>
      <%= @portfolio_item.body %>
      <h4>Technologies Used:</h4>
    </div>
  </div>
</div>

<hr>
<h4>Obviously removable session inspection:</h4>
<%= session.inspect %>

<hr>

    <% if session[:source] %>
    <p>Thanks for visiting from <%= session[:source] %><p>
    <% end %>